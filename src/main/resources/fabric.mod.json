{
  "schemaVersion": 1,
  "id": "extra-damage-enchantments",
  "version": "${version}",

  "name": "Extra Damage Enchantments",
  "description": "Adds additional entity groups as datapack tags and adds enchantments that act on them.",
  "authors": [
    "Provismet"
  ],
  "contact": {
    "homepage": "https://github.com/Provismet/Extra-Damage-Enchantments",
    "sources": "https://github.com/Provismet/Extra-Damage-Enchantments",
    "issues": "https://github.com/Provismet/Extra-Damage-Enchantments/issues"
  },

  "license": "MIT",
  "icon": "assets/extra_de/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.provismet.extradamageenchantments.ExtraDEMain"
    ],
    "fabric-datagen": [
      "com.provismet.generated.extradamageenchantments.ExtraDEDatagen"
    ],
    "provihealth": [
      "com.provismet.extradamageenchantments.compat.HealthEntrypoint"
    ]
  },
  "mixins": [
    "extrade.mixins.json",
    "extrade.neat.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.15.0",
    "fabric-api": "*",
    "minecraft": "~1.20",
    "java": ">=17"
  },
  "recommends": {
    "provihealth": "*"
  },
  "suggests": {
    "origins": "*",
    "extrade_oa": "*",
    "enchantedtooltips": "*",
    "enchdesc": "*"
  },

  "custom": {
    "modmenu": {
      "links": {
        "wiki.extra_de.link": "https://github.com/Provismet/Extra-Damage-Enchantments/wiki"
      }
    }
  }
}
